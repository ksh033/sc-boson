{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true,
    "declaration": true,
    "skipLibCheck": true,
    "paths": {
      "@scboson/sc-element": ["./packages/element/src/index.tsx"],
      "@scboson/sc-layout": ["./packages/layout/src/index.tsx"],
      "@scboson/sc-h5sdk": ["./packages/h5skd/src/index.tsx"],
      "@scboson/sc-schema": ["./packages/schema/src/index.tsx"],
      "@scboson/sc-utils": ["./packages/utils/src/index.js"],
      "@scboson/client-plugin": ["./packages/clientplugin/src/index.ts"]
    }
  },
  "include": [
    "**/src/**/*",
    "**/docs/**/*",
    "scripts/**/*",
    "**/demos",
    ".eslintrc.js",
    "tests",
    "jest.config.js",
    "**/fixtures",
    "./tests/no-duplicated.ts",
    "packages/element/BindEventUtil.ts"
  ],
  "plugins": [{ "transform": "typescript-transform-paths", "afterDeclarations": true }]
}
